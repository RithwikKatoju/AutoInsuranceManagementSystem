@model AutoInsuranceManagementSystem.Areas.Admin.Models.UserEntityViewModel

@{
    ViewBag.Title = "Profile";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-sm border-0" style="width: 400px;">
        <div class="card-body">
            <h4 class="text-center text-primary mb-4">User Details</h4>

            <div class="mb-3">
                <label class="text-secondary fw-bold">Full Name:</label>
                <p class="text-dark mb-0">@Model.FullName</p>
            </div>

            <div class="mb-3">
                <label class="text-secondary fw-bold">Email:</label>
                <p class="text-dark mb-0">@Model.Email</p>
            </div>

            <div>
                <label class="text-secondary fw-bold">Role:</label>
                <p class="text-dark mb-0">@Model.Role</p>
            </div>
        </div>
    </div>
</div>
