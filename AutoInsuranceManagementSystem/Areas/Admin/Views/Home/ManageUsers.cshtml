@model IEnumerable<AutoInsuranceManagementSystem.Areas.Admin.Models.UserEntityViewModel>

@{
	ViewBag.Title = "Manage User";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="form-container">
	@if (Model != null && Model.Any())
	{

		<div>

			<table class="table table-striped table-bordered">
				<thead>
					<tr>
						<th>Name</th>
						<th>Email</th>
						<th>Role</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var user in Model)
					{
						<tr>
							<td>@user.FullName</td>
							<td>@user.Email</td>
							<td>@user.Role</td>
							<td>
								<a asp-area="Admin" asp-controller="Home" asp-action="EditUser" asp-route-Email="@user.Email" class="btn btn-primary">Edit</a>
								@* <a asp-asp-controller="Admin" asp-action="DeleteUser" asp-route-Email="@user.Email" class="btn btn-danger">DeleteUser</a> *@
							</td>
						</tr>
					}
				</tbody>
			</table>

		</div>
	}
	else
	{
		<div class="alert alert-info" role="alert">No User Found</div>
	}
	<br />
	<a asp-area="Admin" asp-controller="Home" asp-action="CreateUser" class="btn btn-primary">Create new user</a>
</div>